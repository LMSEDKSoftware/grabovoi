<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración TLS moderna para compatibilidad con Let's Encrypt -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">whtiazgcxdnemrrgjjqf.supabase.co</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">supabase.io</domain>
        <trust-anchors>
            <!-- Confiar en certificados del sistema (Let's Encrypt, CA públicos) -->
            <certificates src="system"/>
            <!-- Certificados de usuario solo en debug; en release se recomienda quitar -->
            <certificates src="user"/>
        </trust-anchors>
        <!-- Sin pin-set: permite conexión normal a Supabase. Para pinning, usar SHA-256 real del cert. -->
    </domain-config>
    
    <!-- Configuración por defecto para otros dominios -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
