<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración TLS moderna para compatibilidad con Let's Encrypt -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">whtiazgcxdnemrrgjjqf.supabase.co</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">supabase.io</domain>
        <trust-anchors>
            <!-- Confiar en certificados del sistema -->
            <certificates src="system"/>
            <!-- Confiar en certificados de usuario (para desarrollo) -->
            <certificates src="user"/>
        </trust-anchors>
        <!-- Forzar TLS 1.2+ -->
        <pin-set>
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Configuración por defecto para otros dominios -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
