<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Compat.NotificationActionContainer" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/notification_action_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Widget.Compat.NotificationActionText" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="PreferenceSummaryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Info" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Time" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Time.Media" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Info.Media" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Title.Media" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Line2.Media" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Media" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="PreferenceCategoryTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Theme aplicado a la ventana de Android mientras el proceso se inicia -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!-- Mostrar pantalla de carga en la actividad. Se elimina automáticamente cuando
             el motor Flutter dibuja su primer frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    
    <!-- Theme aplicado a la ventana de Android tan pronto como el proceso ha comenzado.
         Este tema determina el color de la ventana de Android mientras tu
         UI de Flutter se inicializa, así como detrás de tu UI de Flutter mientras
         está ejecutándose.

         Este Theme solo se usa a partir de la V2 del embedding de Android de Flutter. -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>